/* ===================================================
   TONCRIME ECONOMY ENGINE
   =================================================== */

const ECON = {};

/* ---------- LEVEL MULTIPLIER ---------- */

ECON.levelMultiplier = function(){

  const lvl = GAME.user.level;
  return 1 + (lvl * 0.03);
};

/* ---------- REWARD SCALE ---------- */

ECON.scaleReward = function(base){

  return Number(
    (base * ECON.levelMultiplier()).toFixed(2)
  );
};

/* ---------- SHOP PRICE SCALE ---------- */

ECON.price = function(base){

  const lvl = GAME.user.level;

  const inflation = 1 + (lvl*0.01);

  return Math.floor(base * inflation);
};

/* ---------- DAILY BONUS ---------- */

ECON.dailyBonus = async function(){

  const today=new Date().toDateString();

  if(localStorage.getItem("daily_bonus")==today)
    return;

  localStorage.setItem("daily_bonus",today);

  await CORE.updatePlayer({
    yton:1,
    xp:5
  });

  notify("G√ºnl√ºk bonus alƒ±ndƒ± üéÅ","success");
};
